<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_login"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/sp_rectangle_root"
            />

        <Button
            android:id="@+id/btn_admin"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_login"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_background_1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/admin"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_user"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_admin"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background_1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/user"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/OtherSigIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_user"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sign In Dengan Cara Lain"
            android:textColor="#fff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/OtherSigIn"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background_1"
                android:drawableLeft="@drawable/btn_background_1"
                android:text="@string/facebook"
                android:textColor="#fff"
                android:textSize="10sp" />

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_background_1"
                android:drawableLeft="@drawable/btn_background_1"
                android:text="@string/google"
                android:textColor="#fff"
                android:textSize="10sp" />


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>